<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:scaleType="fitXY"
    android:longClickable="true"
    android:id="@+id/layout"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player1"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/life"
        android:id="@+id/player1life"
        android:textSize="50sp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/p1plus1"
        android:textSize="30dp"
        android:enabled="true"
        android:layout_marginTop="0dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/p1minus1"
        android:textSize="30dp"
        android:layout_below="@+id/p1plus5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="+5"
        android:id="@+id/p1plus5"
        android:textSize="30dp"
        android:layout_alignTop="@+id/p1plus1"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="-5"
        android:id="@+id/p1minus5"
        android:textSize="30dp"
        android:layout_below="@+id/p1plus5"
        android:layout_alignRight="@+id/p1plus5"
        android:layout_alignEnd="@+id/p1plus5"
        android:onClick="changeLife" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player2"
        android:id="@+id/textView2"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/life"
        android:id="@+id/player2life"
        android:layout_marginLeft="26dp"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/player1life"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/p2plus1"
        android:textSize="30dp"
        android:enabled="true"
        android:layout_alignTop="@+id/p1plus5"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="+5"
        android:id="@+id/p2plus5"
        android:textSize="30dp"
        android:layout_alignTop="@+id/p2plus1"
        android:layout_toRightOf="@+id/p2plus1"
        android:layout_toEndOf="@+id/p2plus1"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/p2minus1"
        android:textSize="30dp"
        android:layout_below="@+id/p2plus1"
        android:layout_alignLeft="@+id/p2plus1"
        android:layout_alignStart="@+id/p2plus1"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="-5"
        android:id="@+id/p2minus5"
        android:textSize="30dp"
        android:layout_below="@+id/p2plus1"
        android:layout_toRightOf="@+id/p2minus1"
        android:layout_toEndOf="@+id/p2minus1"
        android:onClick="changeLife" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player3"
        android:id="@+id/textView4"
        android:textSize="35sp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/life"
        android:id="@+id/player3life"
        android:textSize="50sp"
        android:layout_marginLeft="26dp"
        android:layout_alignBottom="@+id/player2life"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/p3plus1"
        android:textSize="30dp"
        android:enabled="true"
        android:layout_alignTop="@+id/p2plus5"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="+5"
        android:id="@+id/p3plus5"
        android:textSize="30dp"
        android:layout_alignTop="@+id/p3plus1"
        android:layout_toRightOf="@+id/p3plus1"
        android:layout_toEndOf="@+id/p3plus1"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/p3minus1"
        android:textSize="30dp"
        android:layout_below="@+id/p3plus1"
        android:layout_alignLeft="@+id/p3plus1"
        android:layout_alignStart="@+id/p3plus1"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="-5"
        android:id="@+id/p3minus5"
        android:textSize="30dp"
        android:layout_below="@+id/p3plus1"
        android:layout_toRightOf="@+id/p3plus1"
        android:layout_toEndOf="@+id/p3plus1"
        android:onClick="changeLife" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player4"
        android:id="@+id/textView7"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/life"
        android:id="@+id/player4life"
        android:textSize="50sp"
        android:layout_marginLeft="26dp"
        android:layout_alignBottom="@+id/player3life"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/p4plus1"
        android:textSize="30dp"
        android:enabled="true"
        android:layout_above="@+id/p3minus5"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="+5"
        android:id="@+id/p4plus5"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/p4plus1"
        android:layout_toEndOf="@+id/p4plus1"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/p4minus1"
        android:textSize="30dp"
        android:layout_below="@+id/p4plus1"
        android:layout_alignLeft="@+id/p4plus1"
        android:layout_alignStart="@+id/p4plus1"
        android:onClick="changeLife" />

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="-5"
        android:id="@+id/p4minus5"
        android:textSize="30dp"
        android:layout_below="@+id/p4plus1"
        android:layout_toRightOf="@+id/p4minus1"
        android:layout_toEndOf="@+id/p4minus1"
        android:onClick="changeLife" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/losers"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:layout_toLeftOf="@+id/player2life"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
